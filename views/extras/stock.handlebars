<header>
    <nav>
        <img alt="logo" src="/public/images/Beats_Blockchains.png" class="logo">
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/market">Market</a></li>
            <li><a href="/wallet">Wallet</a></li>
            <li><a href="/users/logout">Log Out</a></li>
        </ul>
        <p id="corner-balance">Current Balance: {{balance}}</p>
    </nav>
</header>
<h1>{{name}}</h1>
<!-- TradingView Widget BEGIN -->
<div id="stock-body">
    <div class="tradingview-widget-stock">
        <script src="https://s3.tradingview.com/tv.js"></script>
        <script>
        new TradingView.widget(
        {
        "symbol": "{{symbol}}",
        "timezone": "Etc/UTC",
        "theme": "dark",
        "allow_symbol_change": true
        }
        );
        </script>
    </div>
    <!-- TradingView Widget END -->
    <div id="stock-info">
        <ul>
            <li class="regularMarketPrice">
                Current Price: {{regularMarketPrice}}
            </li>
            <li class="fiftyDayAverage">
                Fifty Day Average: {{fiftyDayAverage}}
            </li>
            <li class="regularMarketDayHigh">
                Market Day High: {{regularMarketDayHigh}}
            </li>
            <li class="underline">
                Market Day Low {{regularMarketDayLow}}
            </li>
        </ul>
    </div>
</div>
<div id="stock-form">
    <form id="buy-stock" action="/wallet/stocks/{{id}}" method="POST">
        <div id="stock-form-contents">
            <div id="stock-form-first">
                <label for="shares">How many shares would you like to purchase?</label>
            </div>
            <div id="stock-form-second">
                <input type="text" name="shares" id="shares" placeholder="Number of Shares">
            </div>
            <div id="stock-form-third">
                <button type="submit">Buy Now</button>
            </div>
        </div>
    </form>
</div>
<div id="stock-errors">
    {{#if errors}}
        <p>{{errors}}</p>
    {{/if}}
</div>